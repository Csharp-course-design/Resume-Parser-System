<Window x:Class="StartUI.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:StartUI"
        mc:Ignorable="d" 
        Height="645" 
        Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        FontSize="18"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="Teal"
                                             SecondaryColor="Lime"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30"
                              ShadowDepth="1"
                              Opacity="0.4"/>
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.22*"/>
        </Grid.ColumnDefinitions>

        <!--左区域-->
        <Border CornerRadius="10 0 0 10"
                ClipToBounds="True">

            <Border.Background>
                <ImageBrush ImageSource="D:\MPine\Microsoft Visual Studio\Project_CSharp\StartUI\Resources\LoginLeft.jpg"
                            Stretch="UniformToFill"/>
            </Border.Background>

            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605"
                                   RadiusX="10"
                                   RadiusY="10"/>
            </Border.Clip>

            <StackPanel Margin="0 120 0 0"
                        VerticalAlignment="Top">
                <TextBlock FontSize="46"
                           FontWeight="Light"
                           Text="Sign up"
                           Foreground="#ffffff"
                           TextAlignment="Center"/>

                <TextBlock FontWeight="Light"
                           FontSize="16"
                           Foreground="#d1f2eb"
                           TextAlignment="Center"
                           Text="to use all features"
                           Margin="0 15 0 3"/>

                <TextBlock FontSize="16"
                           FontWeight="Light"
                           Text="of the application"
                           Foreground="#d1f2eb"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!--右区域-->
        <Border Grid.Column="1"
                Background="#ffffff"
                CornerRadius="0 10 10 0"
                MouseDown="Border_MouseDown">

            <Grid>
                <!--关闭图标-->
                <materialDesign:PackIcon Kind="Close"
                                         VerticalAlignment="Top"
                                         Width="20"
                                         Height="20"
                                         HorizontalAlignment="Right"
                                         Opacity="0.3"
                                         Margin="0 13 14 0"/>
                <Button Height="20"
                        Width="20"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Margin="0 13 14 0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Click"/>

                <!--输入框-->
                <StackPanel VerticalAlignment="Center"
                            Margin="75 0">
                    <TextBox x:Name="UsernameTextBox" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Username"
                             materialDesign:HintAssist.FloatingOffset="0,-20"
                             BorderBrush="#c5c8cc"
                             BorderThickness="0 0 0 1.5"/>
                    
                    <TextBlock x:Name="UsernameRequire" 
                               Text="Between 1 and 30 characters"
                               FontSize="10"
                               Foreground="Black"/>
                    <TextBlock x:Name="UsernameErrorTextBlock"
                                FontSize="10"
                                Foreground="Red"
                                Visibility="Collapsed"/>

                    <TextBox x:Name="EmailTextBox" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Email"
                             materialDesign:HintAssist.FloatingOffset="0,-20"
                             BorderBrush="#c5c8cc"
                             Margin="0 27 0 0"
                             BorderThickness="0 0 0 1.5"/>

                    <TextBlock x:Name="EmailErrorTextBlock"
                               FontSize="10"
                               Foreground="Red"
                               Visibility="Collapsed"/>

                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 materialDesign:HintAssist.Hint="Password"
                                 materialDesign:HintAssist.FloatingOffset="0,-18"
                                 BorderBrush="#c5c8cc"
                                 Margin="0 27 0 0"
                                 BorderThickness="0 0 0 1.5"/>

                    <TextBlock x:Name="PasswordRequire" 
                               Text="Between 1 and 30 characters"
                               FontSize="10"
                               Foreground="Black"/>
                    <TextBlock x:Name="PasswordErrorTextBlock"
                               FontSize="10"
                               Foreground="Red"
                               Visibility="Collapsed"/>

                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 materialDesign:HintAssist.Hint="Repeat Password"
                                 materialDesign:HintAssist.FloatingOffset="0,-18"
                                 BorderBrush="#c5c8cc"
                                 Margin="0 27 0 10"
                                 BorderThickness="0 0 0 1.5"/>

                    <TextBlock x:Name="ConfirmPasswordErrorTextBlock"
                               Text="Passwords don't match"
                               FontSize="10"
                               Foreground="Red"
                               Visibility="Collapsed"/>

                    <StackPanel Orientation="Horizontal" Margin="0 30 0 20" HorizontalAlignment="Center">
                        <Button Content="Submit"
                                Background="BlueViolet"
                                Foreground="#ffffff"
                                FontSize="18"
                                Width="120"
                                Height="45"
                                materialDesign:ButtonAssist.CornerRadius="22"
                                Click="Button_Click_Submit"/>

                        <Button Content="Cancel"
                                Background="AliceBlue"
                                Foreground="BlueViolet"
                                FontSize="18"
                                Width="120"
                                Height="45"
                                Margin="25 0 0 0"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                materialDesign:ButtonAssist.CornerRadius="22"
                                Click="Button_Click_Cancel"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
